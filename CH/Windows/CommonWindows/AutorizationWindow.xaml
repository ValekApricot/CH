<Window x:Class="CoffeeHouse.Windows.CommonWindows.AutorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoffeeHouse.Windows.CommonWindows"
        mc:Ignorable="d"
        Title="Вход в COFFEE HOUSE" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        WindowState="Normal">
    
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="D:\CoffeeHouse\CoffeeHouse\Resourses\Images\JpgFormat\1380310295-kofe-ch2--22.jpg"/>
        </Grid.Background>

        <Rectangle Stroke="Black"
                   StrokeThickness="10"
                   >
            <Rectangle.Fill>
                <ImageBrush/>
            </Rectangle.Fill>
        </Rectangle>


        <StackPanel Margin="10 10 500 0">
            <TextBlock Text="COFFEE HOUSE"
                       Background="Transparent"
                       Height="40"
                       FontStyle="Italic"
                           FontWeight="DemiBold"
                           FontFamily="Times New Roman"
                       FontSize="30"
                       
                       Foreground="White"
                       TextAlignment="Center"
                       
                       Padding="5"/>

            <TextBlock Text="Введите Логин:"
                       Background="Transparent"
                       Margin="0 30 0 0"
                       Height="40"
                       FontStyle="Italic"
                           FontWeight="DemiBold"
                           FontFamily="Times New Roman"
                       FontSize="20"
                       Foreground="White"
                       TextAlignment="Left"
                       Padding="10"/>

            <TextBox   x:Name="TbLogin"
                       Text="Login"
                       Background="Transparent"
                       Margin="0 5"
                       Height="50"
                       FontStyle="Italic"
                           FontWeight="DemiBold"
                           FontFamily="Times New Roman"
                       FontSize="20"
                       BorderThickness="0"
                       Foreground="White"
                       TextAlignment="Left"
                       Padding="10" 
                       GotFocus="TbLogin_GotFocus"
                       LostFocus="TbLogin_LostFocus"/>


            <TextBlock Text="Введите Пароль:"
                       Background="Transparent"
                       Margin="0 30 0 0"
                       Height="40"
                       FontStyle="Italic"
                           FontWeight="DemiBold"
                           FontFamily="Times New Roman"
                       FontSize="20"
                       Foreground="White"
                       TextAlignment="Left"
                       Padding="10"/>

            <PasswordBox   x:Name="TbPassword" 
                           Background="Transparent"
                           Margin="0 5"
                           Height="50"
                           Foreground="White"
                           Padding="15" 
                           FontStyle="Italic"
                           FontWeight="DemiBold"
                           FontFamily="Times New Roman"
                           BorderThickness="0"
                           Password="Password"
                           HorizontalContentAlignment="Left"
                           LostFocus="TbPassword_LostFocus"
                           GotFocus="TbPassword_GotFocus"/>
            <Button
                    x:Name="BtnGo"
                    Height="50"
                    Background="Transparent"
                    Content="Войти"
                    FontSize="20"
                FontStyle="Italic"
                           FontWeight="DemiBold"
                           FontFamily="Times New Roman"
                    Foreground="White"
                   
                    BorderThickness="1"
                    BorderBrush="Black"
                Click="BtnGo_Click"/>


            <Button 
                x:Name="BtnToReg"
                Content="Нет аккаунта? Регистрация"
                   Background="Transparent"
                   Foreground="White"
                   HorizontalContentAlignment="Center"
                    BorderThickness="1"
                    BorderBrush="Black"
                   Margin="0 20"
                FontStyle="Italic"
                           FontWeight="DemiBold"
                           FontFamily="Times New Roman"
                   Click="BtnToReg_Click"
                   />

        </StackPanel>
    </Grid>
</Window>
